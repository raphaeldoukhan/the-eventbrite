<body class="d-flex flex-column h-100">
    <div class="container">
        <h1> Créez votre événement </h1>        
    </div>

    <div class="container">
        <form>
        <div class="form-group row">
            <div class="form-row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="Titre de l'événement">
                </div>

                <div class="col">
                        <input type="datetime-local" class="form-control" id="meeting-time"
                        name="meeting-time" value="<%= Date.today%>">
                </div>               
            </div>
        </div>    

        <div class="form-group row">
            <div class="form-row">
                <div class="col-7">
                    <input type="text" class="form-control" placeholder="Lieu de l'événement">
                </div>
            <div class="col-5">
                <input type="text" class="form-control" placeholder="Durée de l'événement">        
            </div>
        </div>    


        </form>
    </div>
</body>